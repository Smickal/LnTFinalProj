<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolumeFragment"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VOLUME CALCULATOR"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/txt_volumeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Owner"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLOCK"
        android:layout_marginTop="100dp"
        android:layout_alignRight="@+id/btn_piramid"
        android:layout_marginRight="140dp"
        android:textSize="18dp"
        />
    <Button
        android:id="@+id/btn_piramid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PYRAMID"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        />

    <Button
        android:id="@+id/btn_tube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TUBE"
        android:layout_marginTop="100dp"
        android:layout_alignLeft="@+id/btn_piramid"
        android:layout_marginLeft="140dp"
        android:textSize="18dp"
        />

    <!-- BLOCK !-->

    <ImageView
        android:id="@+id/pict_block"
        android:layout_width="700px"
        android:layout_height="700px"
        android:src="@drawable/block"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        />
    <EditText
        android:id="@+id/edit_BlockPanjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Length"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="270dp"/>
    <EditText
        android:id="@+id/edit_BlockLebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Width"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="150dp"/>

    <EditText
        android:id="@+id/edit_BlockTinggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Height"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="270dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btn_submitBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        />

    <TextView
        android:id="@+id/txtHasilBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textColor="@color/purple_200"
        android:textSize="30dp"
        android:layout_marginTop="550dp"/>

    <!-- PIRAMID!-->

    <ImageView
        android:id="@+id/pict_piramid"
        android:layout_width="700px"
        android:layout_height="700px"
        android:src="@drawable/pyramid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        />
    <EditText
        android:id="@+id/edit_PiramidPanjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Length"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="270dp"/>
    <EditText
        android:id="@+id/edit_PiramidLebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Width"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="150dp"/>

    <EditText
        android:id="@+id/edit_PiramidTinggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Height"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="270dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btn_submitPiramid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        />

    <TextView
        android:id="@+id/txtHasilPiramid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textColor="@color/purple_200"
        android:textSize="30dp"
        android:layout_marginTop="550dp"/>

    <!--Tabung!-->
    <ImageView
        android:id="@+id/pict_tube"
        android:layout_width="700px"
        android:layout_height="700px"
        android:src="@drawable/tube"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        />
    <EditText
        android:id="@+id/edit_TubeRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Radius"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="220dp"/>

    <EditText
        android:id="@+id/edit_TubeHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Height"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btn_submitTube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        />

    <TextView
        android:id="@+id/txtHasilTube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textColor="@color/purple_200"
        android:textSize="30dp"
        android:layout_marginTop="550dp"/>
</RelativeLayout>